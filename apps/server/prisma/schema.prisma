generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  tests     TestRun[]
}

model TestRun {
  id            String    @id @default(uuid())
  projectId     String?
  testType      String
  status        String
  verdict       String?
  endpoint      String
  method        String
  resultSummary Json?
  logs          Json?
  createdAt     DateTime  @default(now())
  finishedAt    DateTime?
  project       Project?  @relation(fields: [projectId], references: [id])
}
